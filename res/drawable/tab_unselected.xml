<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#F5F5F5" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="-3dp"
        android:right="-3dp"
        android:top="-3dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="2dp"
                android:color="#FF00ccff" />

            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>